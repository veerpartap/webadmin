{% extends '::base.html.twig' %}

{% block body -%}
    <h1>UserProfile list</h1>

    {% for flashMessage in app.session.flashbag.get('showindex') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
    
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mobile</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Email</th>
                <th>Accountnumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('userprofile_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.mobile }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.accountNumber }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('userprofile_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('userprofile_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('userprofile_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
